<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="#ff026b6c"
    android:layout_height="match_parent" tools:context="com.teachmate.teachmate.AboutFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView6"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/sapth_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FAQs"
            android:id="@+id/textView10"
            android:layout_below="@+id/imageView6"
            android:textColorLink="@android:color/white"
            android:layout_marginTop="32dp"
            android:autoLink="web"
            android:textColor="#C0A572"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="See the Frequently Asked Questions."
            android:id="@+id/textViewFAQ"
            android:layout_marginTop="23dp"
            android:textSize="18dp"
            android:textColor="#ffffffff"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
