<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/user_icon"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:id="@+id/imageView_myquestions"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textColor="#000000"
        android:id="@+id/tvusername_myquestions"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_myquestions"
        android:layout_toEndOf="@+id/imageView_myquestions" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question_id"
        android:textColor="#000000"
        android:id="@+id/tvquestion_id_myquestions"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time question was asked"
        android:id="@+id/tvaskedtime_myquestions"
        android:layout_below="@+id/tvusername_myquestions"
        android:layout_toRightOf="@+id/imageView_myquestions"
        android:layout_toEndOf="@+id/imageView_myquestions" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="The actual question would be displayed here"
        android:id="@+id/tvquestion_myquestions"
        android:maxLines="4"
        android:textColor="#000000"
        android:layout_below="@+id/imageView_myquestions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Category"
        android:id="@+id/tvcategory_myquestions"
        android:layout_below="@+id/tvaskedtime_myquestions"
        android:layout_toRightOf="@+id/imageView_myquestions"
        android:layout_toEndOf="@+id/imageView_myquestions" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question id : "
        android:textSize="10dp"
        android:textColor="#000000"

        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvquestion_id_myquestions"
        android:layout_toStartOf="@+id/tvquestion_id_myquestions" />

</RelativeLayout>